<header class="bg-header-footer-blue fixed top-0 right-0 left-0" style="z-index: 1000;">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div id="icon-container" class="flex lg:flex-1"> <!-- Contenedor del ícono -->
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <img id="header-icon" class="h-8 w-auto" src="/images/icono.png" alt=""/>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button id="menu-toggle" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path class="text-clear" stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="/aboutme" id="aboutme" class="text-sm font-semibold leading-6 text-clear">Sobre mí</a>
      <a href="/projects" id="projects" class="text-sm font-semibold leading-6 text-clear">Proyectos</a>
      <a href="/experience" id="experience" class="text-sm font-semibold leading-6 text-clear">Experiencia</a>
      <a href="/contact" id="contact" class="text-sm font-semibold leading-6 text-clear">Contacto</a>
    </div>
  </nav>
  <!-- Menú móvil, inicialmente oculto -->
  <div id="mobile-menu" class="lg:hidden hidden" role="dialog" aria-modal="true" style="background-color: #11071F">
    <!-- Fondo -->
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-dark-blue px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-dark-blue">
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img class="h-8 w-auto" src="/images/icono.png" alt=""/>
        </a>
        <button id="close-menu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path class="text-clear" stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <div class="-mx-3">
              <a href="/aboutme" class="-mx-3 block rounded-lg px-3 py-2 text-clear font-semibold leading-7 text-clear hover:bg-hover">Sobre mí</a>
              <a href="/projects" class="-mx-3 block rounded-lg px-3 py-2 text-clear font-semibold leading-7 text-clear hover:bg-hover">Proyectos</a>
              <a href="/experience" class="-mx-3 block rounded-lg px-3 py-2 text-clear font-semibold leading-7 text-clear hover:bg-hover">Experiencia</a>
              <a href="/contact" class="-mx-3 block rounded-lg px-3 py-2 text-clear font-semibold leading-7 text-clear hover:bg-hover">Contacto</a>
            </div>
          </div>
          <div class="py-6"></div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeButton = document.getElementById('close-menu');
    const headerIcon = document.getElementById('header-icon'); // Selección del ícono del header

    if (toggleButton && mobileMenu && closeButton && headerIcon) {
      toggleButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        headerIcon.style.display = mobileMenu.classList.contains('hidden') ? 'block' : 'none'; // Ocultar o mostrar el ícono
      });

      closeButton.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        headerIcon.style.display = 'block'; // Mostrar el ícono al cerrar el menú
      });
    }
  });
</script>