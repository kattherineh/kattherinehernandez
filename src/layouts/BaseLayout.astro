---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
    title: string,
    showFooter: boolean
}

const { title, showFooter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg+xml" href="/images/icono.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content="Este es mi portafolio personal y profesional, Â¡pase adelante!">
    <meta name="author" content="Kattherine Hernandez">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Preahvihear&display=swap" rel="stylesheet">
</head>
<body class="bg-dark-blue font-reboto mt-32" >
    <Header/>
    <slot/>
	{showFooter && <Footer></Footer>}
</body>
</html>