---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondHeader from '../components/SecondHeader.astro';
import ContactCard from '../components/ContactCard.astro';
---

<BaseLayout showFooter={false} title="Contacto | Kattherine Hernandez">
    <div class="max-w-6xl mx-auto px-5 py-12 text-clear">
        <!-- Header Section -->
        <SecondHeader title="Contáctame" text="¡Hablemos de proyectos!" />

        <!-- Contact Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <ContactCard
                src="/images/github.svg"
                alt="GitHub"
                username="@kattherineh"
                title="GitHub"
                text="Revisa mis proyectos y código"
                href="https://github.com/kattherineh"
                target="_blank"
            />

            <ContactCard
                src="/images/correo.png"
                alt="Email"
                username="kattherinehernandezs@gmail.com"
                title="Email"
                text="Conversemos sobre oportunidades"
                href="mailto:kattherinehernandezs@gmail.com"
                target=""
            />

            <ContactCard
                src="/images/linkedin.png"  
                alt="LinkedIn"
                username="Kattherine Mayely H..."
                title="LinkedIn"
                text="Conectemos profesionalmente"
                href="https://www.linkedin.com/in/kattherine-mayely-hernandez-6a1a85275"
                target="_blank"
            />
    </div>
</BaseLayout>